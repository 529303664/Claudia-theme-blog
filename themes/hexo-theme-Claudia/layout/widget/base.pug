
- if (is_archive()) pageTitle = 'Archives'
- if (is_tag()) pageTitle = 'Tag: ' + page.tag
- if (is_category()) pageTitle = 'Category: ' + page.category
- if (is_month()) pageTitle += ': ' + page.month + '/' + page.year
- if (is_year()) pageTitle += ': ' + page.year
- var pageTitle = page.title || theme.user && theme.user.name + "'s blog"

doctype html
html(lang=config.language)
  head
    meta(charset='UTF-8')
    title= pageTitle
    meta(name="description" content= config.description || theme.user && theme.user.description)
    meta(name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no, initial-scale=1")

    link(rel="icon" href= theme.favicon)
    link(rel="stylesheet" href= url_for('/style/bulma.css'))
    link(rel="stylesheet" href= url_for('/style/base.css'))
    link(rel="stylesheet" href= url_for('/style/helper.css'))

    script(src= url_for("/js/main.js"))

    block link
    block style
  body.is-flex.is-flex-direction-column
    include ./header.pug
    main.is-flex-grow-2
      block content
    footer.is-flex.is-flex-direction-column.is-align-items-center.is-flex-shrink-0.is-family-serif
      section.sns-container
        include ./sns.pug
      p
        span Copyright ©
        span= ' ' + config.author + ' ' + new Date().getFullYear()
      div.is-flex
        p Powered by Hexo｜
        p.is-flex.is-justify-content-center
          a(href='//github.com/haojen') theme by &nbspHaojen&nbsp
        div(style="margin-top: 2px")
          a(class="github-button" href="https://github.com/haojen/hexo-theme-Claudia" data-icon="octicon-star" data-color-scheme="no-preference: light; light: light; dark: light;" data-show-count="true")

    script(async defer src="https://buttons.github.io/buttons.js")
    block script

