include methods
main.aside-card-container.recent-widget
    h3 Recent posts
    ul
        if page.posts.length > 0
            each post in page.posts.sort('date', -1).limit(6).toArray()
                li.is-flex
                    - var title = post.title || 'title'
                    - var backgroundColor = 'f5f5f5'
                    - var uiAvatarURL = `background=${backgroundColor}&name=${title.slice(0, 2)}`
                    img(src= getPostCoverImg(post) || `https://ui-avatars.com/api/?${uiAvatarURL}`)
                    //else
                    //    div.post-img-placeholder
                    section.is-flex-grow-2
                        h4
                            a(href=url_for(post.path))= post.title || 'Title'
                        if post.date
                            time(datetime=post.date.toJSON())= date(post.date, date_format)
